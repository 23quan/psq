<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="vm"
            type="com.example.psq.fragment.viewmodel.AnswerViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_answer_bg" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="32dp"
                android:background="@drawable/shape_stroke_gray_solid_white_rc_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="6dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_user_name" />

                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="2dp"
                    android:layout_marginRight="6dp"
                    android:background="#ffffff"
                    android:cursorVisible="true"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="填写姓名"
                    android:lines="1"
                    android:textColor="#000000"
                    android:textColorHint="#939393"
                    android:textCursorDrawable="@drawable/shape_edittext_cursor"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_stroke_gray_solid_white_rc_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="6dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_user_name" />

                <TextView
                    android:id="@+id/tvSelectTime"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="选择时间"
                    android:lines="1"
                    android:textColor="#000000"
                    android:textColorHint="#939393"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="6dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_direction_down" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_stroke_gray_solid_white_rc_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="6dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_user_name" />

                <TextView
                    android:id="@+id/tvQBankName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="2dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:ellipsize="end"
                    android:gravity="center_vertical"
                    android:hint="选择题库名称"
                    android:lines="1"
                    android:textColor="#000000"
                    android:textColorHint="#939393"
                    android:textSize="10sp" />

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginHorizontal="6dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_direction_down" />

            </LinearLayout>


            <TextView
                android:id="@+id/tvAnswer"
                android:layout_width="250dp"
                android:layout_height="32dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/shape_solid_blue_rc_bg"
                android:gravity="center"
                android:text="去答题"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </FrameLayout>
</layout>