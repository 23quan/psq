<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="vm"
            type="com.example.psq.fragment.viewmodel.HomeViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_home_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivQBank"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="40dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_qbank_car" />

            <ImageView
                android:id="@+id/ivAnswer"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_answer_car" />

            <ImageView
                android:id="@+id/ivAnswered"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginHorizontal="40dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/ic_answered_car" />

            <LinearLayout
                android:id="@+id/llSet"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/shape_stroke_blue_solid_white_rc_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginRight="3dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_set" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="去设置"
                    android:textColor="#2776ff"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</layout>